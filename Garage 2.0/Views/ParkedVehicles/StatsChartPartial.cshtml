@model StatsViewModel

<script src="~/lib/Chart.js/chart.min.js"></script>

<canvas id="myChart" width="200" height="200"></canvas>
<script>
const ctx = document.getElementById('myChart');
const myChart = new Chart(ctx, {
    type: 'pie',
    data: {
        labels: ['Bilar', 'Bussar', 'Lastbilar', 'Motorcyklar', 'Cyklar', 'Båtar'],
        datasets: [{
            label: 'Fordon',

            data: [@Model.CarCount, 
                   @Model.BusCount,
                   @Model.TruckCount,
                   @Model.MotorCycleCount,
                   @Model.BikeCount, 
                   @Model.BoatCount],

            backgroundColor: [
                'rgba(255, 99, 132, 0.2)',
                'rgba(54, 162, 235, 0.2)',
                'rgba(255, 206, 86, 0.2)',
                'rgba(75, 192, 192, 0.2)',
                'rgba(153, 102, 255, 0.2)',
                'rgba(255, 159, 64, 0.2)'
            ],
            borderColor: [
                'rgba(255, 99, 132, 1)',
                'rgba(54, 162, 235, 1)',
                'rgba(255, 206, 86, 1)',
                'rgba(75, 192, 192, 1)',
                'rgba(153, 102, 255, 1)',
                'rgba(255, 159, 64, 1)'
            ],
            borderWidth: 1
        }]
    },
    //options: {
    //    scales: {
    //        y: {
    //            beginAtZero: true
    //        }
    //    }
    //}
});
</script>
